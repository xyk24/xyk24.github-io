import math
from turtle import *

def hearts(R):
    return 15*math.sin(R)**3
    
def hearts(R):
    return 12*math.cos(R)-5*\
    math,(2*R)-2*\
    math.cos(3*R)-\
    math.cos(4*R)

speed(9000)
bgcolor("black")

for i in range(6000):
    goto(hearts(i)*20,hearts(i)*20)
    for j in range(5):
        color("red")
    goto(0,0)
done()